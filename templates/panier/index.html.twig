{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1 class="text-center text-3xl font-semibold mb-8">Panier</h1>

    <div class="container mx-auto px-4">
        <table class="w-full text-left border-collapse">
            <thead>
            <tr>
                <th class="py-4 px-6 bg-gray-100 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Article</th>
                <th class="py-4 px-6 bg-gray-100 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Quantité</th>
                <th class="py-4 px-6 bg-gray-100 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Prix unitaire</th>
                <th class="py-4 px-6 bg-gray-100 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Total</th>
            </tr>
            </thead>
            <tbody>
            {% set total = 0 %}

            {% for item in panier.getItems %}
                {% set articleTotal = item.article.prix * item.quantity %}
                <tr class="hover:bg-gray-100">
                    <td class="py-4 px-6 border-b border-gray-200">{{ item.article.titre }}</td>
                    <td class="py-4 px-6 border-b border-gray-200">{{ item.quantity }}</td>
                    <td class="py-4 px-6 border-b border-gray-200">{{ item.article.prix }}€</td>
                    <td class="py-4 px-6 border-b border-gray-200">{{ articleTotal }}€</td>
                </tr>
                {% set total = total + articleTotal %}
            {% endfor %}

            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="py-4 px-6 text-right font-bold text-gray-600 border-t border-gray-200">Total</td>
                <td class="py-4 px-6 font-bold text-gray-600 border-t border-gray-200">{{ total }}€</td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
