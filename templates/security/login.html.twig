{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-gray-200 to-yellow-200 min-h-screen">
        <div class="container mx-auto px-4 py-12">
            <h2 class="text-4xl text-center text-white font-black tracking-tight sm:text-5xl bg-clip-text mb-6">
                <span class="hover-border uppercase text-sky-400/100 opacity-100 font-bold">Connexion</span>
            </h2>

            <div class="w-full max-w-md mx-auto">
                <form action="{{ path('app_login') }}" method="post"
                      class="bg-white/70 shadow-md rounded px-8 pt-6 pb-8 mb-4">
                    {% if error %}
                        <div class="bg-red-500 text-white px-4 py-2 mb-6 rounded">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}


                    {% if app.user %}
                        <div class="bg-red/70 shadow-md rounded px-8 pt-6 pb-8 mb-4">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="mb-6">
                        <label for="inputEmail" class="block text-sky-400/100 text-sm font-bold mb-2">Email:</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                               autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-6">
                        <label for="inputPassword" class="block text-sky-400/100 text-sm font-bold mb-2">Mot de
                            passe:</label>
                        <input type="password" name="password" id="inputPassword"
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                               autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-8 flex items-center">
                        <input type="checkbox" name="_remember_me" id="_remember_me"
                               class="form-checkbox h-5 w-5 text-sky-400 rounded focus:ring-sky-400 focus:outline-none focus:border-sky-400">
                        <label for="_remember_me" class="text-sky-400/100 text-sm font-bold ml-2">Se souvenir de moi</label>
                    </div>


                    <div class="flex items-center justify-between">
                        <input type="submit" value="Se connecter"
                               class="rounded-xl bg-gradient-to-r from-emerald-400 to-sky-400 px-5 py-3 text-base font-medium text-white transition duration-200 hover:border-amber-200 border-2 border-white hover:text-yellow-200 transition-colors duration-300 ease-in-out">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
