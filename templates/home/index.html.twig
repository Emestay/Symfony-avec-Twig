{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}


    <div class="bg-gradient-to-r from-gray-200 to-yellow-200 min-h-screen">

        <div class="container mx-auto px-4 py-12">
            <h2 class="text-4xl text-center text-white font-black tracking-tight sm:text-5xl bg-clip-text mb-6">
                <span class="hover-border uppercase text-sky-400/100 opacity-100 font-bold">Ma page Symfony</span>
            </h2>

            <h3 class="text-2xl text-center text-sky-400/80 mb-8">{{ welcome_message }}</h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for item in items %}
                    <div class="bg-white shadow-md p-6">
                        <h2 class="text-2xl font-semibold mb-4">{{ item.title }}</h2>
                        <p class="text-gray-600">
                            {{ item.description }}
                        </p>
                        <a href="#"
                           class="bg-gradient-to-r from-green-300 to-yellow-300 text-white px-4 py-2 mt-4 inline-block transition duration-300 ease-in-out hover:from-green-400 hover:to-yellow-400">Clique üçñ</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}