{% extends 'base.html.twig' %}

{% block title %}Ajouter{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-gray-200 to-yellow-200 min-h-screen">
        <div class="container mx-auto px-4 py-12">
            <h2 class="text-4xl text-center text-white font-black tracking-tight sm:text-5xl bg-clip-text mb-6">
                <span class="hover-border uppercase text-sky-400/100 opacity-100 font-bold">Ajouter un article</span>
            </h2>

            <div class="w-full max-w-md mx-auto">
                <form action="{{ path('ajouter') }}" method="post"
                      class="bg-white/70 shadow-md rounded px-8 pt-6 pb-8 mb-4">
                    <div class="mb-6">
                        <label for="titre" class="block text-sky-400/100 text-sm font-bold mb-2">Titre:</label>
                        <input type="text" id="titre" name="titre" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    </div>

                    <div class="mb-6">
                        <label for="description" class="block text-sky-400/100 text-sm font-bold mb-2">Description:</label>
                        <textarea id="description" name="description" required rows="4"
                                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></textarea>
                    </div>

                    <div class="mb-6">
                        <label for="couleurs" class="block text-sky-400/100 text-sm font-bold mb-2">Couleurs:</label>
                        <input type="text" id="couleurs" name="couleurs" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    </div>

                    <div class="mb-6">
                        <label for="prix" class="block text-sky-400/100 text-sm font-bold mb-2">Prix:</label>
                        <input type="number" id="prix" name="prix" step="0.01" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    </div>

                    <div class="mb-8">
                        <label for="imageUrl" class="block text-sky-400/100 text-sm font-bold mb-2">URL de l'image:</label>
                        <input type="url" id="imageUrl" name="imageUrl" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    </div>

                    <div class="flex items-center justify-between">
                        <input type="submit" value="Ajouter l'article"
                               class="rounded-xl bg-gradient-to-r from-emerald-400 to-sky-400 px-5 py-3 text-base font-medium text-white transition duration-200 hover:border-amber-200 border-2 border-white hover:text-yellow-200 transition-colors duration-300 ease-in-out">
                    </div>
                </form>
            </div>
            <a href="https://unsplash.com/fr/s/photos/t-shirt" class="text-blue-500 hover:text-blue-800 underline">Photos de T-shirts</a>

        </div>

    </div>
{% endblock %}
